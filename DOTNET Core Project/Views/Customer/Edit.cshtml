@model DOTNET_Core_Project.Models.Musteriler

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<h4>Musteriler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MusteriNo" />
            <div class="form-group">
                <label asp-for="MusteriAdi" class="control-label"></label>
                <input asp-for="MusteriAdi" class="form-control" />
                <span asp-validation-for="MusteriAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusteriTelefon" class="control-label"></label>
                <input asp-for="MusteriTelefon" class="form-control" />
                <span asp-validation-for="MusteriTelefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusteriAdres" class="control-label"></label>
                <input asp-for="MusteriAdres" class="form-control" />
                <span asp-validation-for="MusteriAdres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetNo" class="control-label"></label>
                <select asp-for="PetNo" class="form-control" asp-items="ViewBag.PetNo"></select>
                <span asp-validation-for="PetNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


@model IEnumerable<DOTNET_Core_Project.Models.Turler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TurAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TurSayisi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TurAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TurSayisi)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.TurNo" class="btn btn-success">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.TurNo" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

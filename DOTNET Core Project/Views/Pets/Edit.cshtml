@model DOTNET_Core_Project.Models.Pets

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<h4>Pets</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetNo" />
            <div class="form-group">
                <label asp-for="PetAdi" class="control-label"></label>
                <input asp-for="PetAdi" class="form-control" />
                <span asp-validation-for="PetAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetHastalik" class="control-label"></label>
                <input asp-for="PetHastalik" class="form-control" />
                <span asp-validation-for="PetHastalik" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetYas" class="control-label"></label>
                <input asp-for="PetYas" class="form-control" />
                <span asp-validation-for="PetYas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TurNo" class="control-label"></label>
                <select asp-for="TurNo" class="form-control" asp-items="ViewBag.TurNo"></select>
                <span asp-validation-for="TurNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
